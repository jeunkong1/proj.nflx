import pandas as pd
def load_data(file_path):
    """
    Load data from a CSV file into a pandas DataFrame.

    Parameters:
    file_path (str): The path to the CSV file.

    Returns:
    pd.DataFrame: DataFrame containing the loaded data.
    """
    try:
        data = pd.read_csv(file_path)
        return data
    except Exception as e:
        print(f"An error occurred while loading the data: {e}")
        return None
    
# Bring NFLX data into a DataFrame
nflx_data = load_data('NFLX_HistoricalData.csv')
# Display the first few rows of the DataFrame
if nflx_data is not None:
    print(nflx_data.head())
else:
    print("Failed to load data.")
# Ensure the DataFrame is not empty
if nflx_data is not None and not nflx_data.empty:
    print("Data loaded successfully.")
else:
    print("No data to display.")
# Display the shape of the DataFrame
if nflx_data is not None:
    print(f"Data shape: {nflx_data.shape}")
# Display the columns of the DataFrame
if nflx_data is not None:
    print(f"Data columns: {nflx_data.columns.tolist()}")
# Display the data types of the DataFrame
if nflx_data is not None:
    print(f"Data types:\n{nflx_data.dtypes}")
